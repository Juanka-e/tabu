# Database
DATABASE_URL="mysql://root:@localhost:3306/tabu2"

# NextAuth
AUTH_SECRET="replace_with_a_strong_random_value_at_least_32_chars"
# AUTH_URL and AUTH_TRUST_HOST are only needed behind a reverse proxy in production

# App
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NODE_ENV="development"
WORD_POOL_SIZE=120
ADMIN_TIMEOUT_MS=180000

# Rate Limiting â€” set RATE_LIMIT_ENABLED=false to disable for local testing
RATE_LIMIT_ENABLED=true

# Login brute-force protection (5 attempts per 60 seconds per IP)
LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW_S=60

# Register spam protection (3 registrations per hour per IP)
REGISTER_RATE_LIMIT_MAX=3
REGISTER_RATE_LIMIT_WINDOW_S=3600
